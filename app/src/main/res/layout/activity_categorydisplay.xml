<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/displayImg1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/burger"/>

    <TextView
        android:id="@+id/displayTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:paddingTop="10dp"
        android:paddingLeft="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/stars" />

        <TextView
            android:id="@+id/displayTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="4.9"
            android:textColor="@color/red"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/displayTxt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:text="Category"
            android:textColor="@color/red"
            android:textSize="18dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Information"
        android:paddingTop="15dp"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:layout_marginLeft="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:tint="@android:color/white"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/displayTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Yenepoya Chambers,Bendoor"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:tint="@android:color/white"
            android:src="@drawable/phone" />

        <TextView
            android:id="@+id/displayTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="+91 9763826749"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:tint="@android:color/white"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/displayTxt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="9am â€“ 9:30pm"
            android:textColor="@android:color/darker_gray"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        >

        <Button
            android:id="@+id/btnCall"
            android:layout_width="150dp"
            android:layout_height="51dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_call"
            android:text="Call Now"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDirection"
            android:layout_width="150dp"
            android:layout_height="51dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:background="@drawable/btn_direction"
            android:text="Get Direction" />
    </LinearLayout>

</LinearLayout>